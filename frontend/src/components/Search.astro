---
import Chip from "./Chip.astro";

const colorMap = {
  Electricista: "blue",
  Plomero: "green",
  Carpintero: "yellow",
  Pintor: "red",
  Albañil: "purple",
  Gasista: "pink",
  Jardinero: "indigo",
  Cerrajero: "teal",
  Mudanzas: "orange",
  Limpieza: "cyan",
  Otros: "gray",
};
---

<div class="bg-white rounded-lg shadow-md p-6 mb-8">
  <div class="flex items-center border-2 border-gray-300 rounded-full p-2 mb-4">
    <input
      type="search"
      placeholder="Busca un oficio o profesional..."
      class="w-full outline-none bg-transparent"
    />
    <button class="bg-blue-500 text-white px-4 py-2 rounded-full">
      Buscar
    </button>
  </div>

  <h2 class="text-2xl font-semibold mb-4">Categorías</h2>
  <div class="flex flex-wrap gap-2 mb-6">
    {Object.keys(colorMap).map((category) => <Chip label={category} />)}
  </div>
</div>
